{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "..",
		"baseUrl": "..",
		"paths": {
			"@server/*": ["server/*"],
			"@shared/*": ["shared/*"],
			"@api/*": ["api/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"../api/**/*.ts",
		"../shared/**/*.ts",
		"../server/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}