{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "api/**/*.ts",
    "shared/**/*.ts"
  ]
}
