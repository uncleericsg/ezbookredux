{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationDir": "./dist/server",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "references": [
    { "path": "./tsconfig.shared.json" }
  ],
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
