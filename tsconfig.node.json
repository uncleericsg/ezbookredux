{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/config",
    "types": ["node", "vite/client"],
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/config/.tsbuildinfo"
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "tailwind.config.ts",
    "vite-plugin-google-maps.ts",
    "src/theme/theme.config.ts"
  ],
  "references": [
    { "path": "./tsconfig.shared.json" }
  ]
}
