{
  "project": {
    "name": "iAircon EasyBooking",
    "type": "web_application",
    "framework": "react",
    "bundler": "vite",
    "node_version": ">=18",
    "path": "c:/Users/djxpi/CascadeProjects/project-redux"
  },
  "architecture": {
    "routing": {
      "library": "react-router",
      "version": "^6.0.0",
      "implementation": "browser_router"
    },
    "state_management": {
      "primary": "redux_toolkit",
      "secondary": "context_api",
      "persistence": "local_storage"
    }
  },
  "ui_implementation": {
    "admin": {
      "library": "mui",
      "version": "^5.0.0",
      "status": "in_progress",
      "scope": {
        "include": ["/src/components/admin/**/*"],
        "exclude": ["/src/components/admin/shared/**/*"]
      },
      "patterns": {
        "layout": "mui_layout_components",
        "forms": "mui_form_components",
        "data_display": "mui_data_grid",
        "navigation": "mui_navigation_components"
      }
    },
    "frontend": {
      "library": "tailwind",
      "version": "^3.0.0",
      "status": "stable",
      "scope": {
        "include": ["/src/components/**/*", "/src/pages/**/*"],
        "exclude": ["/src/components/admin/**/*"]
      },
      "patterns": {
        "layout": "flex_grid_system",
        "forms": "custom_form_components",
        "styling": "tailwind_classes"
      }
    },
    "framework": "material_ui",
    "theme": "custom_dark",
    "responsive": true,
    "accessibility": true
  },
  "code_conventions": {
    "exports": {
      "style": "named",
      "components": {
        "pattern": "both_named_and_default",
        "example": "export { ComponentName }; export default ComponentName;"
      }
    },
    "imports": {
      "style": "named_imports",
      "prefer_named": true,
      "example": "import { ComponentName } from './ComponentName';"
    },
    "components": {
      "file_naming": "PascalCase",
      "function_style": "arrow_function",
      "prop_types": "typescript_interfaces"
    }
  },
  "command_execution": {
    "shell": "powershell",
    "node_scripts": {
      "type": "module",
      "extension": ".mjs",
      "run_command": "node --experimental-modules"
    },
    "package_manager": "npm",
    "environment": "windows"
  },
  "security": {
    "api_keys": "environment_variables",
    "authentication": "firebase",
    "authorization": "role_based"
  },
  "testing": {
    "framework": "vitest",
    "runner": "vitest",
    "ui": "@vitest/ui",
    "coverage": {
      "provider": "v8",
      "threshold": 80
    },
    "setup": {
      "environment": "jsdom",
      "utilities": ["@testing-library/react", "@testing-library/user-event"]
    }
  },
  "migrations": {
    "mui_implementation": {
      "status": "in_progress",
      "scope": "admin_only",
      "current_phase": "component_migration",
      "affected_paths": ["/src/components/admin/*", "/src/components/admin/**/*"],
      "protected_paths": {
        "do_not_modify": [
          "/src/components/public/**/*",
          "/src/components/shared/**/*",
          "/src/pages/**/*"
        ],
        "reason": "These paths contain frontend components that should remain using Tailwind"
      }
    },
    "redux_migration": {
      "status": "in_progress",
      "source": "context_api",
      "target": "redux_toolkit",
      "current_phase": "component_migration",
      "completed": {
        "store_setup": true,
        "slices": ["auth", "user", "admin", "technician", "booking"],
        "components": []
      },
      "pending": {
        "contexts": [
          "AuthContext",
          "UserContext",
          "AdminViewContext",
          "BasicUserContext",
          "CombinedUserContext"
        ],
        "components": [
          "/src/components/auth/*",
          "/src/components/admin/*",
          "/src/components/booking/*"
        ]
      },
      "protected_paths": {
        "do_not_modify": [
          "/src/components/public/**/*",
          "/src/components/shared/**/*"
        ],
        "reason": "These components should maintain their current UI and functionality"
      }
    }
  },
  "dependencies": {
    "ui": {
      "admin": ["@mui/material", "@mui/icons-material", "@emotion/react", "@emotion/styled"],
      "frontend": ["tailwindcss", "@headlessui/react", "@heroicons/react"]
    }
  },
  "development": {
    "strict_mode": true,
    "typescript": {
      "strict": true,
      "target": "ES2020"
    },
    "style_guide": {
      "prettier": true,
      "eslint": true
    },
    "path_aliases": {
      "enabled": true,
      "base_url": "src",
      "patterns": {
        "@/*": ["*"],
        "@admin/*": ["components/admin/*"],
        "@api/*": ["api/*"],
        "@auth/*": ["components/auth/*"],
        "@booking/*": ["components/booking/*"],
        "@common/*": ["components/common/*"],
        "@components/*": ["components/*"],
        "@config/*": ["config/*"],
        "@constants/*": ["constants/*"],
        "@contexts/*": ["contexts/*"],
        "@data/*": ["data/*"],
        "@dev/*": ["components/dev/*"],
        "@error-boundary/*": ["components/error-boundary/*"],
        "@firebase/*": ["services/firebase/*"],
        "@google/*": ["services/google/*"],
        "@hooks/*": ["hooks/*"],
        "@icons/*": ["components/icons/*"],
        "@lib/*": ["lib/*"],
        "@locations/*": ["services/locations/*"],
        "@modals/*": ["components/modals/*"],
        "@mocks/*": ["mocks/*"],
        "@notifications/*": ["components/notifications/*"],
        "@onemap/*": ["services/onemap/*"],
        "@pages/*": ["pages/*"],
        "@payment/*": ["components/payment/*"],
        "@profile/*": ["components/profile/*"],
        "@redux-types/*": ["store/types/*"],
        "@routes/*": ["routes/*"],
        "@server/*": ["server/*"],
        "@services/*": ["services/*"],
        "@slices/*": ["store/slices/*"],
        "@snapshots/*": ["snapshots/*"],
        "@store/*": ["store/*"],
        "@styles/*": ["styles/*"],
        "@teams/*": ["services/teams/*"],
        "@tech/*": ["components/tech/*"],
        "@test/*": ["components/test/*"],
        "@theme/*": ["theme/*"],
        "@types/*": ["types/*"],
        "@ui/*": ["components/ui/*"],
        "@utils/*": ["utils/*"],
        "@validation/*": ["services/validation/*"]
      }
    }
  }
}
