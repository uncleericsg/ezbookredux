{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "tsBuildInfoFile": "./dist/shared/.tsbuildinfo"
  },
  "include": ["shared/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}