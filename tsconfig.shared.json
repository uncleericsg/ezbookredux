{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/shared",
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/shared/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@types/*": ["shared/types/*"]
    },
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./shared/types"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "shared/**/*.d.ts",
    "shared/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}