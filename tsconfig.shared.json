{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationDir": "./dist/shared",
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true
  },
  "include": ["shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}