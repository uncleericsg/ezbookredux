import React from 'react';
import { Route } from 'react-router-dom';

import AMCManagement from './AMCManagement';
import AMCRenewal from './AMCRenewal';
import AMCSubscriptionFlow from './AMCSubscriptionFlow';
import ProtectedRoute from './ProtectedRoute';

/**
 * AMCRoutes component for the iAircon Easy Booking system
 *
 * @component AMCRoutes
 * @description A React component that defines the routing structure for the AMC (Annual Maintenance Contract) section
 *
 * @example
 * ```tsx
 * import { AMCRoutes } from './components';
 * <AMCRoutes />
 * ```
 */

export interface AMCRoutesProps extends React.ComponentPropsWithoutRef<'div'> {
  // Currently no additional props needed, but interface is defined for future extensibility
}

export const AMCRoutes: React.FC<AMCRoutesProps> = () => {
  return (
    <>
      <Route
        path="amc-management"
        element={
          <ProtectedRoute>
            <AMCManagement />
          </ProtectedRoute>
        }
      >
        <Route path="subscribe" element={<AMCSubscriptionFlow />} />
        <Route path="renew" element={<AMCRenewal />} />
      </Route>
    </>
  );
};

export default AMCRoutes;
