'use client';

import { AlertCircle } from 'lucide-react';
import React from 'react';

interface ErrorDisplayProps extends React.HTMLAttributes<HTMLDivElement> {
  error: Error | null;
  className?: string;
}

const ErrorDisplay: React.FC<ErrorDisplayProps> = ({
  error,
  className,
  ...rest
}) => {
  if (!error) return null;

  return (
    <div
      className={`rounded-lg border border-destructive bg-destructive/10 p-4 text-destructive ${
        className || ''
      }`}
      role="alert"
      {...rest}
    >
      <div className="flex items-start space-x-4">
        <AlertCircle className="h-5 w-5 shrink-0" />
        <div className="flex-1">
          <h3 className="mb-1 font-medium leading-none tracking-tight">
            {error.name || 'Error'}
          </h3>
          <div className="text-sm [&_p]:leading-relaxed">
            {error.message || 'An unknown error occurred'}
          </div>
        </div>
      </div>
    </div>
  );
};

export default ErrorDisplay;
