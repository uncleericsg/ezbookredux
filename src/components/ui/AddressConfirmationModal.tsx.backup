 import { motion, AnimatePresence } from 'framer-motion';
import { Check, X, Edit2 } from 'lucide-react';
import React from 'react';

import { cn } from "@/lib/utils";

// Export types at the top
export type AddressConfirmationModalProps = {
  className?: string;
  isOpen: boolean;
  address: string;
  onConfirm: () => void;
  onEdit: () => void;
  onClose: () => void;
};

// Component declaration as const
const AddressConfirmationModal = ({
  className,
  isOpen,
  address,
  onConfirm,
  onEdit,
  onClose
}: AddressConfirmationModalProps) => {
  if (!isOpen) return null;

  return (
    <AnimatePresence>
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        exit={{ opacity: 0 }}
        className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4"
      >
        <motion.div
          initial={{ scale: 0.95, opacity: 0 }}
          animate={{ scale: 1, opacity: 1 }}
          exit={{ scale: 0.95, opacity: 0 }}
          className={cn(
            "bg-white rounded-lg shadow-lg p-6 max-w-md w-full",
            className
          )}
        >
          <div className="flex justify-between items-start mb-4">
            <h2 className="text-lg font-semibold">Confirm Address</h2>
            <button
              onClick={onClose}
              className="text-gray-400 hover:text-gray-500"
            >
              <X className="h-5 w-5" />
            </button>
          </div>

          <div className="mb-6">
            <p className="text-gray-600 mb-2">Is this your correct address?</p>
            <div className="bg-gray-50 p-3 rounded-lg flex items-start">
              <div className="flex-grow">{address}</div>
              <button
                onClick={onEdit}
                className="ml-2 text-blue-500 hover:text-blue-600"
              >
                <Edit2 className="h-4 w-4" />
              </button>
            </div>
          </div>

          <div className="flex justify-end space-x-3">
            <button
              onClick={onClose}
              className="px-4 py-2 text-gray-600 hover:text-gray-700 rounded-lg"
            >
              Cancel
            </button>
            <button
              onClick={onConfirm}
              className="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 flex items-center"
            >
              <Check className="h-4 w-4 mr-2" />
              Confirm
            </button>
          </div>
        </motion.div>
      </motion.div>
    </AnimatePresence>
  );
};

// Add displayName
AddressConfirmationModal.displayName = 'AddressConfirmationModal';

// Both named and default exports at the bottom
export { AddressConfirmationModal };
export default AddressConfirmationModal;
