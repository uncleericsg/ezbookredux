'use client';

import React, { FC, ReactNode, useEffect } from 'react';

export interface ScrollToTopWrapperProps;


export const ScrollToTopWrapper: React.FC<ScrollToTopWrapperProps> = ({
  children,
  currentStep
}) => {
  useEffect(() => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  }, [currentStep]);

  return <>{children}</>;
};

ScrollToTopWrapper.displayName = 'ScrollToTopWrapper';

undefined.displayName = 'undefined';