import { useState } from 'react';
import { toast } from 'sonner';

import { submitServiceRating } from '../services/apiService';
import { chatGPTService } from '../services/chatgpt';

export const useServiceRating = () => {
  const [loading, setLoading] = useState(false);

  const submitRating = async (serviceId: string, rating: number, feedback?: string) => {
    setLoading(true);
    try {
      await submitServiceRating(serviceId, rating, feedback);
      
      // Generate response using ChatGPT if rating is 4-5 stars
      if (rating >= 4 && feedback) {
        const response = await chatGPTService.generateRatingResponse(
          rating,
          feedback
        );
        toast.success(response);
      }
      
      toast.success('Thank you for your feedback!');
    } catch (error) {
      console.error('Failed to submit rating:', error);
      toast.error('Failed to submit rating');
      throw error;
    } finally {
      setLoading(false);
    }
  };

  return {
    submitRating,
    loading
  };
};
undefined.displayName = 'undefined';
